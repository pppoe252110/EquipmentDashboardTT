<Window x:Class="EquipmentDashboardTT.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EquipmentDashboardTT"
        xmlns:viewModels="clr-namespace:EquipmentDashboardTT.ViewModels"
        xmlns:converters="clr-namespace:EquipmentDashboardTT.Converters"
        xmlns:models="clr-namespace:EquipmentDashboardTT.Models"
        mc:Ignorable="d"
        Title="Equipment Dashboard" Height="600" Width="1200"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <converters:WrapperToStringConverter x:Key="WrapperToStringConverter"/>
        <converters:NullToBooleanConverter x:Key="NullToBooleanConverter"/>

        <Style x:Key="ValidatedTextBox" TargetType="TextBox">
            <Setter Property="Validation.ErrorTemplate">
                <Setter.Value>
                    <ControlTemplate>
                        <DockPanel>
                            <Border BorderBrush="Red" BorderThickness="1">
                                <AdornedElementPlaceholder/>
                            </Border>
                        </DockPanel>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ValidatedDatePicker" TargetType="DatePicker">
            <Setter Property="Validation.ErrorTemplate">
                <Setter.Value>
                    <ControlTemplate>
                        <DockPanel>
                            <Border BorderBrush="Red" BorderThickness="1">
                                <AdornedElementPlaceholder/>
                            </Border>
                        </DockPanel>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="GroupHeaderStyle" TargetType="GroupItem">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="GroupItem">
                        <Expander IsExpanded="True" BorderThickness="1" BorderBrush="LightGray" Margin="5">
                            <Expander.Header>
                                <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="14" Padding="5"/>
                            </Expander.Header>
                            <ItemsPresenter/>
                        </Expander>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Window.DataContext>
        <viewModels:MainViewModel/>
    </Window.DataContext>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="300"/>
        </Grid.ColumnDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Grid.ColumnSpan="3" Text="Панель управления оборудованием" 
                   FontSize="20" FontWeight="Bold" Margin="0,0,0,10" HorizontalAlignment="Center"/>

        <!-- Search and Filter -->
        <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBox x:Name="SearchTextBox" Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" 
                     Width="200" Height="25" Margin="0,0,10,0" 
                     ToolTip="Поиск по названию, серийному номеру или категории"/>
            <ComboBox ItemsSource="{Binding StatusFilters}" 
                      SelectedItem="{Binding SelectedStatusFilter}"
                      DisplayMemberPath="DisplayName"
                      Width="150" Height="25"/>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="1" Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,10">
            <Button Content="Добавить" Command="{Binding AddDeviceCommand}" 
                    Width="80" Height="25" Margin="0,0,5,0"/>
            <Button Content="Удалить" Command="{Binding DeleteDeviceCommand}" 
                    Width="80" Height="25" Margin="0,0,5,0"/>
            <Button Content="Сохранить" Command="{Binding SaveDeviceCommand}" 
                    Width="80" Height="25"/>
        </StackPanel>

        <!-- Devices List -->
        <GroupBox Grid.Row="2" Grid.Column="0" Header="Список оборудования" Padding="5">
            <ListView ItemsSource="{Binding DevicesView}" SelectedItem="{Binding SelectedDevice}" 
                      ScrollViewer.VerticalScrollBarVisibility="Auto">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Название" DisplayMemberBinding="{Binding Name}" Width="150"/>
                        <GridViewColumn Header="Категория" DisplayMemberBinding="{Binding Category}" Width="120"/>
                        <GridViewColumn Header="Серийный номер" DisplayMemberBinding="{Binding SerialNumber}" Width="120"/>
                        <GridViewColumn Header="Дата установки" DisplayMemberBinding="{Binding InstallationDate, StringFormat=dd.MM.yyyy}" Width="100"/>
                        <GridViewColumn Header="Статус" DisplayMemberBinding="{Binding DisplayStatus}" Width="120"/>
                    </GridView>
                </ListView.View>

                <ListView.GroupStyle>
                    <GroupStyle ContainerStyle="{StaticResource GroupHeaderStyle}"/>
                </ListView.GroupStyle>
            </ListView>
        </GroupBox>

        <!-- Device Details -->
        <GroupBox Grid.Row="2" Grid.Column="2" Header="Детали оборудования" Padding="5"
                  IsEnabled="{Binding SelectedDevice, Converter={StaticResource NullToBooleanConverter}}">
            <Grid Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="Название:" Margin="0,0,5,5"/>
                <TextBox Grid.Row="0" Grid.Column="1" 
                         Text="{Binding SelectedDevice.Name, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" 
                         Margin="0,0,0,5" Style="{StaticResource ValidatedTextBox}"/>

                <TextBlock Grid.Row="1" Grid.Column="0" Text="Категория:" Margin="0,0,5,5"/>
                <TextBox Grid.Row="1" Grid.Column="1" 
                         Text="{Binding SelectedDevice.Category, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" 
                         Margin="0,0,0,5" Style="{StaticResource ValidatedTextBox}"/>

                <TextBlock Grid.Row="2" Grid.Column="0" Text="Серийный номер:" Margin="0,0,5,5"/>
                <TextBox Grid.Row="2" Grid.Column="1" 
                         Text="{Binding SelectedDevice.SerialNumber, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" 
                         Margin="0,0,0,5" Style="{StaticResource ValidatedTextBox}"/>

                <TextBlock Grid.Row="3" Grid.Column="0" Text="Дата установки:" Margin="0,0,5,5"/>
                <DatePicker Grid.Row="3" Grid.Column="1" 
                            SelectedDate="{Binding SelectedDevice.InstallationDate, ValidatesOnDataErrors=True}" 
                            Margin="0,0,0,5" Style="{StaticResource ValidatedDatePicker}"/>

                <TextBlock Grid.Row="4" Grid.Column="0" Text="Статус:" Margin="0,0,5,5"/>
                <ComboBox Grid.Row="4" Grid.Column="1" 
                          ItemsSource="{Binding DeviceStatuses}"
                          SelectedValue="{Binding SelectedDevice.Status}"
                          SelectedValuePath="Value"
                          DisplayMemberPath="DisplayName"
                          Margin="0,0,0,5"/>
            </Grid>
        </GroupBox>

        <!-- Status Bar -->
        <StatusBar Grid.Row="3" Grid.ColumnSpan="3" Margin="0,5,0,0">
            <StatusBarItem>
                <TextBlock Text="{Binding Devices.Count, StringFormat=Всего устройств: {0}}"/>
            </StatusBarItem>
            <StatusBarItem>
                <TextBlock Text="{Binding SelectedDevice.Name, StringFormat=Выбрано: {0}}"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
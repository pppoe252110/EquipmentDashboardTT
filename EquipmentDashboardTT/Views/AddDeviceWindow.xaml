<Window x:Class="EquipmentDashboardTT.Views.AddDeviceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EquipmentDashboardTT.Views"
        xmlns:viewModels="clr-namespace:EquipmentDashboardTT.ViewModels"
        xmlns:converters="clr-namespace:EquipmentDashboardTT.Converters"
        mc:Ignorable="d"
        Title="Добавить новое оборудование" 
        Height="400" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Window.Resources>
        <converters:WrapperToStringConverter x:Key="WrapperToStringConverter"/>
        <converters:NullToBooleanConverter x:Key="NullToBooleanConverter"/>

        <Style x:Key="ValidatedTextBox" TargetType="TextBox">
            <Setter Property="Validation.ErrorTemplate">
                <Setter.Value>
                    <ControlTemplate>
                        <DockPanel>
                            <Border BorderBrush="Red" BorderThickness="1">
                                <AdornedElementPlaceholder/>
                            </Border>
                        </DockPanel>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ValidatedDatePicker" TargetType="DatePicker">
            <Setter Property="Validation.ErrorTemplate">
                <Setter.Value>
                    <ControlTemplate>
                        <DockPanel>
                            <Border BorderBrush="Red" BorderThickness="1">
                                <AdornedElementPlaceholder/>
                            </Border>
                        </DockPanel>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="GroupHeaderStyle" TargetType="GroupItem">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="GroupItem">
                        <Expander IsExpanded="True" BorderThickness="1" BorderBrush="LightGray" Margin="5">
                            <Expander.Header>
                                <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="14" Padding="5"/>
                            </Expander.Header>
                            <ItemsPresenter/>
                        </Expander>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Window.DataContext>
        <viewModels:AddDeviceViewModel/>
    </Window.DataContext>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Grid.ColumnSpan="2" Text="Добавление нового оборудования" 
                   FontSize="16" FontWeight="Bold" Margin="0,0,0,15" HorizontalAlignment="Center"/>

        <!-- Name -->
        <TextBlock Grid.Row="1" Grid.Column="0" Text="Название:" 
                   Margin="0,0,5,10" VerticalAlignment="Center"/>
        <TextBox Grid.Row="1" Grid.Column="1" 
                 Text="{Binding NewDevice.Name, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" 
                 Margin="0,0,0,10" Height="25" Style="{StaticResource ValidatedTextBox}"/>

        <!-- Category -->
        <TextBlock Grid.Row="2" Grid.Column="0" Text="Категория:" 
                   Margin="0,0,5,10" VerticalAlignment="Center"/>
        <TextBox Grid.Row="2" Grid.Column="1" 
                 Text="{Binding NewDevice.Category, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" 
                 Margin="0,0,0,10" Height="25" Style="{StaticResource ValidatedTextBox}"/>

        <!-- Serial Number -->
        <TextBlock Grid.Row="3" Grid.Column="0" Text="Серийный номер:" 
                   Margin="0,0,5,10" VerticalAlignment="Center"/>
        <TextBox Grid.Row="3" Grid.Column="1" 
                 Text="{Binding NewDevice.SerialNumber, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" 
                 Margin="0,0,0,10" Height="25" Style="{StaticResource ValidatedTextBox}"/>

        <!-- Installation Date -->
        <TextBlock Grid.Row="4" Grid.Column="0" Text="Дата установки:" 
                   Margin="0,0,5,10" VerticalAlignment="Center"/>
        <DatePicker Grid.Row="4" Grid.Column="1" 
                    SelectedDate="{Binding NewDevice.InstallationDate, ValidatesOnDataErrors=True}" 
                    Margin="0,0,0,10" Height="25" Style="{StaticResource ValidatedDatePicker}"/>

        <!-- Status -->
        <TextBlock Grid.Row="5" Grid.Column="0" Text="Статус:" 
                   Margin="0,0,5,10" VerticalAlignment="Center"/>
        <ComboBox Grid.Row="5" Grid.Column="1" 
                  ItemsSource="{Binding DeviceStatuses}"
                  SelectedItem="{Binding SelectedStatus}"
                  DisplayMemberPath="DisplayName"
                  Margin="0,0,0,10" Height="25"/>

        <!-- Spacer -->
        <Rectangle Grid.Row="6" Grid.ColumnSpan="2" Fill="Transparent"/>

        <!-- Buttons -->
        <StackPanel Grid.Row="7" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK" Command="{Binding OkCommand}" 
                    Width="80" Height="25" Margin="0,0,10,0" IsDefault="True"/>
            <Button Content="Отмена" Command="{Binding CancelCommand}" 
                    Width="80" Height="25" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>